{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
		"allowSyntheticDefaultImports": true,
    "baseUrl": "./src"
  },
  "typeRoots": ["node_modules/@types" , "types.d.ts"],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
